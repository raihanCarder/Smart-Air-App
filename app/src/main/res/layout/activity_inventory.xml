<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inventoryScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_inventory_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inventory"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:gravity="center_horizontal" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_update_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_update_inventory_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Inventory"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_inhaler_type_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Inhaler type"
                    android:textAppearance="?attr/textAppearanceBody2" />

                <Spinner
                    android:id="@+id/spinner_inhaler_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:spinnerMode="dropdown"
                    android:entries="@array/inhaler_types"/>

                <TextView
                    android:id="@+id/tv_remaining_amount_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Remaining amount"
                    android:textAppearance="?attr/textAppearanceBody2" />

                <EditText
                    android:id="@+id/et_remaining_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:hint="Enter number of remaining puffs"
                    android:inputType="number"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/btn_submit_log"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Submit Log" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Dashboard"
            android:padding="12dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

</ScrollView>