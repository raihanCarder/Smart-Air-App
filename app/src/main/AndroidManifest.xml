<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:enableOnBackInvokedCallback="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartAir"
        tools:targetApi="33">

        <!-- Required for Google Play Services (prevents SecurityException) -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- FileProvider for sharing files (images, etc.) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.smartair.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Entry Point / Launcher -->
        <activity
            android:name=".EntryPointActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Onboarding & Home Activities -->
        <activity
            android:name=".onboarding.view.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".onboarding.view.OnboardingActivity"
            android:exported="false" />
        <activity
            android:name=".onboarding.view.RoleSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".onboarding.view.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".onboarding.view.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".onboarding.view.ChildLoginActivity"
            android:exported="false" />
        <activity
            android:name=".onboarding.view.PasswordResetActivity"
            android:exported="false" />
      <activity android:name=".onboarding.view.SelectChildLoginActivity" android:exported="false" />
        <activity
            android:name=".homepage.view.ParentHomeActivity"
            android:exported="false" />
        <activity
            android:name=".homepage.view.ProviderHomeActivity"
            android:exported="false" />
        <activity
            android:name=".homepage.view.ChildHomeActivity"
            android:exported="false" />
        <activity
            android:name=".dailycheckin.view.DailyCheckInActivity"
            android:exported="false" />
        <activity
            android:name=".glossary.view.GlossaryActivity"
            android:exported="false" />
        <activity
            android:name=".history.view.HistoryActivity"
            android:exported="false" />
        <activity
            android:name=".ParentLink.view.AddChildActivity"
            android:exported="false" />
        <activity
            android:name=".onboarding.view.SelectChildLoginActivity"
            android:exported="false" />
        <activity android:name=".ParentDashboard.view.ParentDashboardActivity"
            android:exported="false"/>
        <activity android:name=".ParentDashboard.view.ScheduleActivity"
            android:exported="false"/>

        <!-- Homepage (parent/provider/child) -->
        <activity android:name=".homepage.view.ParentHomeActivity" android:exported="false" />
        <activity android:name=".homepage.view.ProviderHomeActivity" android:exported="false" />
        <activity android:name=".homepage.view.ChildHomeActivity" android:exported="false" />
        <activity android:name=".homepage.view.ParentChildDetailActivity" android:exported="false" />
        <activity android:name=".homepage.view.ProviderChildDetailActivity" android:exported="false" />

        <!-- ParentLink / Manage children / Sharing -->
        <activity android:name=".ParentLink.view.ManageChildrenActivity" android:exported="false" />
        <activity android:name=".ParentLink.view.SharingSettingsActivity" android:exported="false" />
        <activity android:name=".ParentLink.view.AddChildActivity" android:exported="false" />
        <activity android:name=".ParentLink.view.EditChildActivity" android:exported="false" />

        <!-- Parent dashboard screens -->
        <activity android:name=".ParentDashboard.view.ParentDashboardActivity" android:exported="false" />
        <activity android:name=".ParentDashboard.view.ScheduleActivity" android:exported="false" />

    </application>

</manifest>